<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp"
    android:padding="16dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Device ID -->
        <TextView
            android:id="@+id/tvDeviceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device ID"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Device State (only for LED) -->
        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State: OFF"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:visibility="gone"/>

        <!-- Temperature (only for DHT) -->
        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature: 24.6Â°C"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:visibility="gone"/>

        <!-- Humidity (only for DHT) -->
        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity: 74%"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:visibility="gone"/>

        <!-- Gas Level (only for Gas Sensor) -->
        <TextView
            android:id="@+id/tvGasLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gas Level: 668"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:visibility="gone"/>

        <!-- Toggle State Button (only for LED) -->
        <Button
            android:id="@+id/btnToggleState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle State"
            android:visibility="gone"/>

        </LinearLayout>
</androidx.cardview.widget.CardView>
